<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
			  <div class="user">
			    <div class="avatar">
			      <img class="avatar" src="https://avatars.dicebear.com/v2/bottts/benji.svg">
			    </div>
			    <div class="username">
			      <%= post.user.username %>
			    </div>
			  </div>
			  <%= image_tag post.image, class: 'main-image' %>
			  <div class="description">
			    <%= post.description %>
			  </div>
    </section>
  <% end %>

  <%= paginate @posts %>
</div>